{
  "description": "Change Control+Tab to Command+Tab",
  "manipulators": [
    {
      "from": { "key_code": "left_command" },
      "to": [
        {
          "set_variable": {
            "name": "command_tab_mode",
            "value": 1
          }
        },
        { "key_code": "left_control" }
      ],
      "to_after_key_up": [
        {
          "set_variable": {
            "name": "command_tab_mode",
            "value": 0
          }
        },
        { "key_code": "left_control" }
      ],
      "type": "basic"
    },
    {
      "conditions": [
        {
          "name": "command_tab_mode",
          "type": "variable_if",
          "value": 1
        }
      ],
      "from": {
        "key_code": "tab",
        "modifiers": { "optional": ["any"] }
      },
      "to": [
        {
          "key_code": "tab",
          "modifiers": ["control"]
        }
      ],
      "type": "basic"
    },
    {
      "conditions": [
        {
          "name": "command_tab_mode",
          "type": "variable_if",
          "value": 1
        }
      ],
      "from": {
        "key_code": "tab",
        "modifiers": {
          "mandatory": ["shift"],
          "optional": ["any"]
        }
      },
      "to": [
        {
          "key_code": "tab",
          "modifiers": ["control", "shift"]
        }
      ],
      "type": "basic"
    },
    {
      "conditions": [
        {
          "name": "command_tab_mode",
          "type": "variable_if",
          "value": 1
        }
      ],
      "from": {
        "key_code": "up_arrow",
        "modifiers": { "optional": ["any"] }
      },
      "to": [
        {
          "key_code": "up_arrow",
          "modifiers": ["control"]
        }
      ],
      "type": "basic"
    },
    {
      "conditions": [
        {
          "name": "command_tab_mode",
          "type": "variable_if",
          "value": 1
        }
      ],
      "from": {
        "key_code": "down_arrow",
        "modifiers": { "optional": ["any"] }
      },
      "to": [
        {
          "key_code": "down_arrow",
          "modifiers": ["control"]
        }
      ],
      "type": "basic"
    },
    {
      "conditions": [
        {
          "name": "command_tab_mode",
          "type": "variable_if",
          "value": 1
        }
      ],
      "from": {
        "key_code": "left_arrow",
        "modifiers": { "optional": ["any"] }
      },
      "to": [
        {
          "key_code": "left_arrow",
          "modifiers": ["control"]
        }
      ],
      "type": "basic"
    },
    {
      "conditions": [
        {
          "name": "command_tab_mode",
          "type": "variable_if",
          "value": 1
        }
      ],
      "from": {
        "key_code": "right_arrow",
        "modifiers": { "optional": ["any"] }
      },
      "to": [
        {
          "key_code": "right_arrow",
          "modifiers": ["control"]
        }
      ],
      "type": "basic"
    }
  ]
}