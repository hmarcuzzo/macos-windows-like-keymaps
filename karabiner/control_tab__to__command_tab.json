{
  "description": "Change Control+Tab to Command+Tab",
  "manipulators": [
    {
      "from": { "key_code": "left_command" },
      "to": [
        {
          "set_variable": {
            "name": "command_tab_mode",
            "value": 1
          }
        },
        {
          "set_variable": {
            "name": "tab_pressed",
            "value": 0
          }
        },
        { "key_code": "left_control" }
      ],
      "to_after_key_up": [
        {
          "set_variable": {
            "name": "command_tab_mode",
            "value": 0
          }
        },
        {
          "set_variable": {
            "name": "tab_pressed",
            "value": 0
          }
        },
        { "key_code": "left_control" }
      ],
      "type": "basic"
    },

    {
      "conditions": [
        {
          "name": "command_tab_mode",
          "type": "variable_if",
          "value": 1
        }
      ],
      "from": {
        "key_code": "tab",
        "modifiers": { "optional": ["any"] }
      },
      "to": [
        {
          "set_variable": {
            "name": "tab_pressed",
            "value": 1
          }
        },
        {
          "key_code": "tab"
        }
      ],
      "type": "basic"
    },
